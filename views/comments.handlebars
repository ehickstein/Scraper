<div class = "container" >

    <div class="jumbotron">
    {{#each Article}}
    <h2> "{{this.title}}" </h2>
    <h4><a href= "https://www.nytimes.com/{{this.link}}"> {{this.link}}</a></h4><hr>
        <button type="button" data-id="{{this._id}}" class="btn btn-warning" id="add-comment" data-toggle="modal" data-target="#commentModal">Add comment</button>
        <a href="/"> <button type="button" class="btn btn-primary save-article" >Back to Articles</button> </a>
    </div>

  {{/each}}
<br>
{{#each Article}}
{{#each this.comment}}
<div class = "well">
    <h3>{{this.title}}</h3>
    <p>{{this.body}}</p>
        <form method="GET" action="/delete/{{this._id}}">
          <a href="/delete/{{this._id}}"><button class="btn btn-danger btn-sm" id="comment-delete">Delete comment</button></a>
        </form>
    </div>
</div>
{{/each}} 
{{/each}}

<!-- Modal -->
{{#each Article}}
<div id="commentModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4>Add your comment.</h4>
      </div>
      <div class="modal-body">
        <p>Add a comment on this article. This article ID is {{this._id}}.  This headline is "{{this.title}}".</p>
        <form method="POST" action="/articles/{{this._id}}">
          <div class="form-group">
            <label>Title:</label>
            <input type="title" class="form-control" id="comment-title" name="title" placeholder="Title">
            <label>Body:</label>
            <input type="body" class="form-control" id="comment-body" name="body" placeholder="Body">
          </div>
          <button type="button" class="btn btn-default btn-danger" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-default btn-primary add-comment">Submit Your Comment</button>
        </form>

      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>
{{/each}}
